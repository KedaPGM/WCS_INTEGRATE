<Border x:Class="wcs.Dialog.FerryAutoPosDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wcs.Dialog"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      mc:Ignorable="d" 
      MinHeight="320" MinWidth="500" MaxWidth="600" MaxHeight="500"  CornerRadius="20"
      DataContext="{Binding FerryAutoPos, Source={StaticResource Locator}}"
      Background="{DynamicResource RegionBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,0">
            <TextBlock Text="摆渡车名称:" Style="{StaticResource TextBlockSubTitle}" FontSize="20" Margin="0,10,0,10"/>
            <TextBlock  Text="{Binding FerryName}" Style="{StaticResource TextBlockSubTitle}" FontSize="20" Margin="0,10,0,10"/>
        </StackPanel>

        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource MBorder_LT}">
            <TextBlock Text="开始轨道编号:" Style="{StaticResource TextBlockSubTitle}" FontSize="20" Margin="10"/>
        </Border>
        <!--<Border Grid.Row="1" Grid.Column="1" Style="{StaticResource MBorder_LTR}">
            <TextBox Text="{Binding STARTTRACKCODE, Mode=TwoWay}" BorderThickness="1" Margin="10" FontSize="20" Height="50"/>
        </Border>-->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource MBorder_LTR}" Height="70">
            <TextBlock Text="{Binding STARTTRACKCODE, Mode=TwoWay}" Style="{StaticResource TextBlockSubTitle}" Margin="10" FontSize="20"/>
        </Border>

        <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource MBorder_LT}">
            <TextBlock Text="轨道数量:" Style="{StaticResource TextBlockSubTitle}" FontSize="20" Margin="10"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource MBorder_LTR}">
            <TextBox Text="{Binding TRACKNUMBER, Mode=TwoWay}" Height="50" FontSize="20" Margin="10" />
        </Border>

        <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource MBorder_LTB}">
            <TextBlock Text="对位侧:" Style="{StaticResource TextBlockSubTitle}" FontSize="20" Margin="10"/>
        </Border>
        <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource MBorder_LTRB}" Height="70">
            <TextBlock Text="{Binding AUTOPOSSIDE}" Style="{StaticResource TextBlockSubTitle}" FontSize="20" Margin="10"/>
            <!--<hc:ComboBox Visibility="{Binding SHOWIN, Converter={StaticResource Boolean2VisibilityReConverter}}"
                         ItemsSource="{Binding Source={StaticResource DevFerryAutoPosE}}" 
                         SelectedItem="{Binding AUTOPOSSIDE}"  Margin="10,17,10,17" FontSize="22"/>-->
        </Border>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Width="120" Margin="0,0,5,0" Command="{Binding CancelCmd}" Style="{StaticResource ButtonDanger}" Content="取消"/>
            <Button Width="120" Margin="5,0,0,0" Command="{Binding ComfirmCmd}" Style="{StaticResource ButtonPrimary}" Content="确认"/>
        </StackPanel>
    </Grid>
</Border>
