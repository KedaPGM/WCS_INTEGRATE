<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:hc="https://handyorg.github.io/handycontrol">

    <sys:Double x:Key="MSideMenuFS">20</sys:Double>
    <sys:Double x:Key="MSideMenuItemFS">18</sys:Double>
    <sys:Double x:Key="MTabBitTitleFS">25</sys:Double>
    <sys:Double x:Key="MInputTitleFS">20</sys:Double>
    <sys:Double x:Key="MButtonFS">20</sys:Double>
    <sys:Double x:Key="MButtonWidth">200</sys:Double>
    <sys:Double x:Key="MButtonHeigth">50</sys:Double>
    <sys:Double x:Key="MGroupBoxFS">25</sys:Double>
    <sys:Double x:Key="MGroupTitleFS">22</sys:Double>
    <sys:Double x:Key="MGroupContentFS">23</sys:Double>
    <sys:Double x:Key="MLightFS">18</sys:Double>

    <Style x:Key="MBorder_L" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="1,0,0,0" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <Style x:Key="MBorder_LT" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="1,1,0,0" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <Style x:Key="MBorder_LR" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="1,0,1,0" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <Style x:Key="MBorder_LTR" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="1,1,1,0" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <Style x:Key="MBorder_LTB" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="1,1,0,1" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <Style x:Key="MBorder_LTRB" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="1,1,1,1" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <Style x:Key="MButton_Primary" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonPrimary}">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Height" Value="50"/>
    </Style>

    <Style x:Key="MButton_Success" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonSuccess}">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Height" Value="50"/>
    </Style>

    <Style x:Key="MButton_Danger" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonDanger}">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Height" Value="50"/>
    </Style>

    <Style x:Key="MButton_Warning" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonWarning}">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Height" Value="50"/>
    </Style>
    
    <Style x:Key="MButton_Gray" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonPrimary}">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>


    <Style x:Key="MButton_CMD_White" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonCustom}">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="hc:BackgroundSwitchElement.MouseHoverBackground" Value="LightYellow"/>
        <Setter Property="hc:BackgroundSwitchElement.MouseDownBackground" Value="SlateGray"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Margin" Value="10,5,10,0"/>
    </Style>
</ResourceDictionary>